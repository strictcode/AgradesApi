{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "WriteTo:0": {
      "Name": "Logger",
      "Args": {
        "configureLogger": {
          "WriteTo": [
            {
              "Name": "File",
              "Args": {
                "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss.fff} {Level:u15} <source:{SourceContext}>] {Message:lj} {Exception}{NewLine}",
                "path": "../../serilogs/log_.log",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      }
    },
    "WriteTo:1": {
      "Name": "Logger",
      "Args": {
        "configureLogger": {
          "WriteTo": [
            {
              "Name": "File",
              "Args": {
                "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss.fff} {Level:u15} <source:{SourceContext}>] {Message:lj} {Exception}{NewLine}",
                "path": "../../serilogs/error_log_.log",
                "rollingInterval": "Day",
                "restrictedToMinimumLevel": "Warning"
              }
            }
          ]
        }
      }
    },

    //debug console logger

    "WriteTo:2": {
      "Name": "Console",
      "Args": {
        "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss.fff} {Level:u15} <source:{SourceContext}>] {Message:lj} {Exception}{NewLine}"
      }
    },


    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "Agrades"
    }
  },


  "AllowedHosts": "*",


  "ConnectionStrings": {
    "DefaultConnection": "User ID=postgres;Password=MasterPassword;Host=localhost;Port=5432;Database=Agrades_Dev;Include Error Detail=true"
  },


  "EnvironmentSettings": {
    "Host": "",
    "ServerTimeZoneTzdb": "Europe/Prague"
  }
}
