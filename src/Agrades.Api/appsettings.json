{

  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo:0": {
      "Name": "File",
      "Args": {
        "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss.fff} {Level:u15} <source:{SourceContext}>] {Message:lj} {Exception}{NewLine}",
        "path": "../../serilogs/log_.log",
        "rollingInterval": "Day"
      }
    },
    "WriteTo:1": {
      "Name": "Logger",
      "Args": {
        "configureLogger": {
          "Filter": [
            {
              "Name": "ByIncludingOnly",
              "Args": {
                "expression": "(@Level = 'Error' or @Level = 'Fatal')"
              }
            }
          ],
          "WriteTo": [
            {
              "Name": "File",
              "Args": {
                "path": "../../serilogs/error_log_.log",
                "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss.fff} {Level:u15} <source:{SourceContext}>] {Message:lj} {Exception}{NewLine}",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      }
    }
  },


  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "User ID=postgres;Password=MasterPassword;Host=localhost;Port=5432;Database=Agrades;"
  },


  "EnvironmentSettings": {
    "Host": "",
    "ServerTimeZoneTzdb": "Europe/Prague"
  }
}
