{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "WriteTo:0": {
      "Name": "Logger",
      "Args": {
        "configureLogger": {
          "WriteTo": [
            {
              "Name": "File",
              "Args": {
                "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss.fff} {Level:u15} <source:{SourceContext}>] {Message:lj} {Exception}{NewLine}",
                "path": "../../serilogs/log_.log",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      }
    },
    "WriteTo:1": {
      "Name": "Logger",
      "Args": {
        "configureLogger": {
          "Filter": [
            {
              "Name": "ByIncludingOnly",
              "Args": {
                "expression": "(@Level = 'Information' or @Level = 'Debug')"
              }
            }
          ],
          "WriteTo": [
            {
              "Name": "File",
              "Args": {
                "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss.fff} {Level:u15} <source:{SourceContext}>] {Message:lj} {Exception}{NewLine}",
                "path": "../../serilogs/error_log_.log",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "Agrades"
    }
  },


  "HostSerilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss.fff} {Level:u15} <source:{SourceContext}>] {Message:lj} {Exception}{NewLine}",
                  "path": "../../serilogs/hostlog_.log",
                  "rollingInterval": "Day"
                }
              }
            ]
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "Agrades"
    }
  },


  "AllowedHosts": "*",


  "ConnectionStrings": {
    "DefaultConnection": "User ID=postgres;Password=MasterPassword;Host=localhost;Port=5432;Database=Agrades;"
  },


  "EnvironmentSettings": {
    "Host": "",
    "ServerTimeZoneTzdb": "Europe/Prague"
  }
}
